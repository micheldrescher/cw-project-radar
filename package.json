{
    "name": "cw-project-radar",
    "version": "0.0.1",
    "description": "A re-implementation of the ThoughtWorks Technology Radar using express, webpack, MongoDB and many other goodies.",
    "main": "server.js",
    "scripts": {
        "clean": "rm -rf dist && rm src/client/views/*.js && rm -rf src/client/bundle*",
        "build": "rm -rf dist && mkdir dist && npm run build:c && npm run build:s",
        "build:c": "rm -rf dist/client && npm run build:c:pug && npm run build:c:js && npm run build:c:static",
        "build:c:pug": "pug -c -D --name-after-file -o dist/client/views src/client/views",
        "build:c:js": "parcel build src/client/index.js --no-source-maps --target browser --bundle-node-modules --out-dir dist/client --out-file bundle.js",
        "build:c:static": "cp -R src/client/css dist/client && cp -R src/client/img dist/client && cp -R src/client/lib dist/client",
        "build:s": "rm -rf dist/server && mkdir dist/server && cp -R src/server dist && cp -R src/common dist && cp .env.prod dist/.env",
        "dev": "cp .env.dev .env && nodemon src/server/server.js",
        "dev:watch:pug": "pug -c -w --name-after-file -o src/client/views src/client/views",
        "dev:watch:js": "parcel watch src/client/index.js --out-dir src/client --out-file bundle.js",
        "start": "cp .env.prod .env && node dist/server/server.js",
        "debug": "ndb server.js",
        "init": "sh scripts/mongo/init-mongo.sh && sh scripts/mongo/populate-mongo.sh"
    },
    "keywords": [
        "cyberwatching.eu",
        "project",
        "radar",
        "EC",
        "H2020"
    ],
    "author": "Michel Drescher (UOXF) <michel.drescher@oerc.ox.ac.uk>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/micheldrescher/cw-project-radar.git"
    },
    "dependencies": {
        "@fast-csv/parse": "^4.1.2",
        "@svgdotjs/svg.js": "^3.0.16",
        "axios": "^0.19.2",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "chance": "^1.1.4",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "d3": "^5.15.0",
        "d3-tip": "^0.9.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^1.3.2",
        "express-rate-limit": "^5.1.1",
        "helmet": "^3.22.0",
        "hpp": "^0.2.3",
        "jsdom": "^16.2.2",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "mongoose": "^5.9.7",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "parsecurrency": "^1.0.0",
        "pug": "^2.0.4",
        "simple-statistics": "^7.0.8",
        "slugify": "^1.4.0",
        "streamifier": "^0.1.1",
        "validator": "^12.2.0",
        "winston": "^3.2.1",
        "xss-clean": "^0.1.1"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.2",
        "ndb": "^1.1.5",
        "nodemon": "^2.0.2",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.17.0",
        "pug-cli": "^1.0.0-alpha6"
    },
    "engines": {
        "node": "^13"
    },
    "browser": {
        "fs": false
    }
}
